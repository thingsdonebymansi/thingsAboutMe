<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Outer ring (border) -->
    <item>
        <shape android:shape="oval">
            <stroke
                android:width="40dp"
                android:color="@color/black" />
        </shape>
    </item>
    <!-- Inner circle (background) -->
    <item
        android:bottom="40dp"
        android:left="40dp"
        android:right="40dp"
        android:top="40dp">
        <shape android:shape="oval">
            <solid android:color="@color/white" />
        </shape>
    </item>
</layer-list>